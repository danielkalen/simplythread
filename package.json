{
  "name": "simplythread",
  "version": "2.0.1",
  "description": "JS Threads: Run arbitrary functions in immediatly-spawned browser threads with an async workflow",
  "main": "dist/simplythread.pretty.js",
  "dependencies": {
    "javascript-stringify-plus": "^1.6.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "closure-compiler-service": "^0.6.1",
    "coffee-script": "^1.10.0",
    "create-output-stream": "0.0.1",
    "foreach-cli": "^1.6.1",
    "forever": "^0.15.1",
    "http-server": "^0.9.0",
    "istanbul": "^0.4.5",
    "json": "^9.0.4",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-opera-launcher": "^1.0.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.1.0",
    "lcov-parse": "0.0.10",
    "mocha": "^2.5.3",
    "phantomjs-prebuilt": "^2.1.14",
    "simplyimport": "^2.3.4",
    "simplywatch": "^2.3.2",
    "svg2png": "^4.1.1",
    "uglify-js": "^2.6.2"
  },
  "scripts": {
    "postversion": "echo \\'$(json -f package.json version)\\' > .config/.version.coffee && npm run build",
    "test": "open test/testrunner.html",
    "test:phantom": "karma start --single-run --browsers PhantomJS .config/karma.local.conf.coffee",
    "test:chrome": "karma start --browsers Chrome .config/karma.local.conf.coffee",
    "test:karma": "karma start .config/karma.local.conf.coffee",
    "test:karma.sauce": "karma start .config/karma.sauce.conf.coffee",
    "test:sauce": "coffee .config/sauce-launch.coffee",
    "test-serve": "http-server -p 9201 --cors ./",
    "sauce-connect": "sc -u simplythread -k 3fb731b0-65f9-4687-a8bd-081c19638028",
    "build": "npm run compile && npm run super-minify",
    "compile": "npm run compile:js && npm run compile:test",
    "compile:js": "foreach -g 'src/*.coffee' -x 'simplyimport -i {{path}} | coffee -b -s -c > dist/{{name}}.pretty.js && uglifyjs dist/{{name}}.pretty.js -m -c keep_fargs,unused=false -o dist/{{name}}.js'",
    "compile:test": "simplyimport -i test/test.coffee | coffee -b -c -s > test/test.js",
    "super-minify": "closure-service dist/simplythread.pretty.js > dist/simplythread.js",
    "watch": "npm run watch:js & npm run watch:test",
    "watch:js": "simplywatch -g 'src/*.coffee' -x 'npm run compile:js -s'",
    "watch:test": "simplywatch -g 'test/test.coffee' -x 'npm run compile:test -s'",
    "measure": "npm run measure:pretty -s && npm run measure:minified -s",
    "measure:pretty": "echo 'Standard:' && gzipped dist/simplythread.pretty.js",
    "measure:minified": "echo 'Standard Minfied:' && gzipped dist/simplythread.js",
    "coverage": "npm run test:phantom && npm run coverage:badge",
    "coverage:badge": "coffee .config/badge-gen.coffee"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielkalen/simplythread.git"
  },
  "author": "Daniel Kalen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danielkalen/simplythread/issues"
  },
  "homepage": "https://github.com/danielkalen/simplythread#readme"
}
